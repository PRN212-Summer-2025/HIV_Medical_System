<UserControl x:Class="HIVMedicalSystem.WPFApplication.NavBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HIVMedicalSystem.WPFApplication"
             mc:Ignorable="d"
             d:DesignHeight="60">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Assets/Styles/NavStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Border Background="White" Padding="10" BorderBrush="#DDD" BorderThickness="0,0,0,1">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            
            <!-- Home -->
            <Button Content="🏠 Home" Style="{StaticResource NavButtonStyle}" Margin="8,0"/>

            <!-- Book Appointment -->
            <Button Content="📅 Book Appointment" Style="{StaticResource NavButtonStyle}" Margin="8,0"/>

            <!-- Test Results -->
            <Button Content="🧪 Test Results" Style="{StaticResource NavButtonStyle}" Margin="8,0"/>

            <!-- Treatment Plan -->
            <Button Content="💊 Treatment Plan" Style="{StaticResource NavButtonStyle}" Margin="8,0"/>

            <!-- Anonymous Support -->
            <Button Content="🙋 Anonymous Support" Style="{StaticResource NavButtonStyle}" Margin="8,0"/>

        </StackPanel>
    </Border>
</UserControl>
